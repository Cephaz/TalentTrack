<div class="w-full max-w-xs m-auto bg-white rounded-lg p-5 border">
  <h2 class="mb-5"><%= t('actions.register') %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="actions">
      <%= f.submit t('actions.register'), class: "bg-primary hover:shadow-lg text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
