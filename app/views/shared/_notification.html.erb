<%= return if flash.instance_variable_get(:@flashes).empty? %>

<% flash.each do |type, msg| %>
  <div
    data-controller="notification"
    data-notification-delay-value="2000"
    class="flex fixed justify-between max-w-xs z-10 top-5 right-5 m-4 p-4 text-teal-950 rounded-lg shadow-md bg-white"
    data-transition-enter-from="opacity-0 translate-x-6"
    data-transition-enter-to="opacity-100 translate-x-0"
    data-transition-leave-from="opacity-100 translate-x-0"
    data-transition-leave-to="opacity-0 translate-x-6"
  >
    <div class="pr-2">
      <%= show_svg("#{type}_icon")%>
    </div>
    <div class="text-sm text-gray-600  tracking-tight">
      <%= msg %>
    </div>
    <button data-action="notification#hide">
      <%= show_svg('close_icon')%>
    </button>
  </div>
<% end %>