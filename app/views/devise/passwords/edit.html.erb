<div class="w-full max-w-md m-auto bg-white rounded-lg p-5 border">
  <h2 class="mb-5"><%= t('devise.passwords.change_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-6">
      <%= f.label :password, t('devise.passwords.new_password'), class: "mb-2" %><br />
      <% if @minimum_password_length %>
        <em>(<%= t('devise.passwords.minimum_length', count: @minimum_password_length) %>)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full p-2 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="field mb-6">
      <%= f.label :password_confirmation, t('devise.passwords.confirm_new_password'), class: "mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.passwords.change_password_button'), class: "bg-primary hover:shadow-lg text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
