<div class="w-full max-w-xs m-auto bg-white rounded-lg p-5 border">
  <div class="mb-5"><%= t('actions.login') %></div> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"block mb-2 text-text" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"block mb-2 text-text" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit t('actions.login'), class: "bg-primary hover:shadow-lg text-white font-bold py-2 px-4 rounded cursor-pointer" %>

  <% end %>
  <%= render "devise/shared/links" %>
</div>
