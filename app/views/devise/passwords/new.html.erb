<div class="w-full max-w-lg m-auto bg-white rounded-lg p-5 border">
  <h2 class="mb-5"><%= t('devise.passwords.forgot_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-6">
      <%= f.label :email, class: "mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.passwords.send_instructions'), class: "bg-primary hover:shadow-lg text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
