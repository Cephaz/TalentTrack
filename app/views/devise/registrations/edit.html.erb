<div class="w-full max-w-xs m-auto bg-white rounded-lg p-5 border">
  <h2 class="mb-5"><%= t('actions.edit', model: resource_name.to_s.humanize) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('devise.confirmations.currently_waiting', email: resource.unconfirmed_email) %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "mb-2" %> <i>(<%= t('devise.registrations.leave_blank') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= t('devise.registrations.minimum_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "mb-2" %> <i>(<%= t('devise.registrations.current_password') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-2 mb-6 text-text border-b-2 border-primary outline-none" %>
    </div>

    <div class="actions">
      <%= f.submit t('actions.update'), class: "bg-primary hover:shadow-lg text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to t('navigation.back'), :back %>
</div>
